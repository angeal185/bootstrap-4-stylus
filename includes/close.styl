.close
    float right
    font-size 1.5rem
    font-weight bold
    line-height 1
    color #000
    text-shadow 0 1px 0 #fff
    opacity .5

.close:focus, .close:hover
    color #000
    text-decoration none
    opacity .75

button
    &.close
        padding 0
        background transparent
        border 0
        -webkit-appearance none