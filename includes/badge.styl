.badge
    display inline-block
    padding 0.25em 0.4em
    font-size 75%
    font-weight bold
    line-height 1
    color #fff
    text-align center
    white-space nowrap
    vertical-align baseline
    border-radius 0.25rem
    &:empty
        display none

.btn
    .badge
        position relative
        top -1px

.badge-pill
    padding-right 0.6em
    padding-left 0.6em
    border-radius 10rem

.badge-primary
    color #fff
    background-color #007bff

.badge-primary[href]:focus, .badge-primary[href]:hover
    color #fff
    text-decoration none
    background-color #0062cc

.badge-secondary
